{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug SQLLite App",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/hospital.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [
        {
          "name": "PATH",
          "value": "${env:PATH};${workspaceFolder};${workspaceFolder}/sqlite"
        }
